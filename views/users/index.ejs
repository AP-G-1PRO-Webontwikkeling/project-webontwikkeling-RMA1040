<%- include("../partials/header") %>
    <section>
        <header>
            <h1>Manage Users</h1>
        </header>
        <a href="/users/create" class="create-user-btn"><button type="button">Add User</button></a>
        <% for (let user of users) { %>
            <article class="user-card">
                <header>
                    <h2><%= user.name %></h2>
                    <p><strong>Username:</strong> <%= user.username %></p>
                </header>
                <p><strong>Email:</strong> <%= user.email %></p>
                <address>
                    <strong>Address:</strong> <%= user.address.street %>, <%= user.address.suite %>, <%= user.address.city %>, <%= user.address.zipcode %>
                </address>
                <p><strong>Phone:</strong> <%= user.phone %></p>
                <p><strong>Website:</strong> <a href="http://<%= user.website %>"><%= user.website %></a></p>
                <p><strong>Company:</strong> <%= user.company.name %></p>
                <div class="card-actions">
                    <form action="/users/<%= user.id %>/delete" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                    <a href="/users/<%= user.id %>/update"><button type="button">Edit</button></a>
                </div>
            </article>
        <% } %>
    </section>
<%- include("../partials/footer") %>